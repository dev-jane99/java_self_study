package study0728;

public class MethodStudy1 {
	
//	Q. 정해진 티켓값에 입력받은 인원수를 곱해서 
//	   전체에서 50% 할인된 가격 출력하기, 메소드 먼저 만들어주기
	
//	    메소드 만들기
	    double ticket (int num1, int num2, double num3) {
		     return (num1 * num2) * num3;
	    }
	
//	    main 메소드
	    public static void main(String[] args) {
		
//		초기값
//		int num1 = 2000;
//		int num2 = 0;
//		double num3 = 0.5;
		
//		출력
		MethodStudy1 ms = new MethodStudy1();
		ms.ticket(0, 0, 0);
		System.out.println("$" + ms.ticket(2500, 5, 0.5));

		
	}
	
	
	
	}

